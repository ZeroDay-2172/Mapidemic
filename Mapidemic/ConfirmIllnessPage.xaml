<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="Mapidemic.ConfirmIllnessPage"
             Title="Confirm Report">

    <Grid RowDefinitions="Auto,*,Auto"
            Padding="16"
            RowSpacing="12">
        <Frame Grid.Row="0"
                Padding="14"
                HasShadow="False"
                BorderColor="#E0E0E0"
                CornerRadius="12">
            <VerticalStackLayout Spacing="6">
                <Label x:Name="SummaryLabel"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="Black"/>
                <Label Text="Thank you for reporting your illness. Your report will help track and manage the spread of illnesses in your area."
                        FontSize="14"
                        TextColor="#6E6E6E"/>
            </VerticalStackLayout>
        </Frame>

        <Grid Grid.Row="1">
            <maps:Map x:Name="MapPreview"
                    IsShowingUser="False"
                    MapType="Street"/>
            <ActivityIndicator x:Name="BusyIndicator"
                    IsRunning="True"
                    IsVisible="True"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
        </Grid>

        <Grid Grid.Row="2"
                ColumnDefinitions="*,*">
            <Button Text="Edit"
                    Clicked="OnEditClicked"
                    CornerRadius="12"
                    BackgroundColor="#EEEEEE"
                    TextColor="#333333"/>
            <Button Text="Confirm &amp; Submit"
                    Grid.Column="1"
                    Clicked="OnConfirmClicked"
                    CornerRadius="12"
                    BackgroundColor="#4C6FFF"
                    TextColor="White"/>
        </Grid>
    </Grid>
</ContentPage>