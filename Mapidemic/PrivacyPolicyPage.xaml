<?xml version="1.0" encoding="utf-8" ?> 
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mapidemic.PrivacyPolicyPage"
             Title="Privacy Policy">

    <ScrollView>
        <Grid Padding="15" RowSpacing="5"
          RowDefinitions="Auto,Auto,Auto,Auto">

            <!-- Introduction -->
            <Border Grid.Row="0"
                    Padding="14"
                    BackgroundColor="#0066CC"
                    HorizontalOptions="FillAndExpand">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ClickedOnIntro" />
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                <Label Grid.Column="1" 
                    Text="1. Introduction" 
                    FontAttributes="Bold" 
                    FontSize="18" 
                    TextColor="White"
                    VerticalTextAlignment="Center" />
                </Grid>
            </Border>

            <!-- Content for Introduction -->
            <Grid Grid.Row="1" x:Name="IntroContent" IsVisible="False"
                  Padding="14" BackgroundColor="Transparent">
                <Label LineBreakMode="WordWrap">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="&#9;&#9;&#9;&#9;&#9;"/>
                            <Span Text="Mapidemic empowers users with real-time awareness of local illness outbreaks " />
                            <Span Text="so they can proactively plan precautions for their health and safety." />
                            <Span Text="The app provides this awareness through an anonymous entry system where users can submit information about their sickness." />
                            <Span Text="&#10;"/>
                            <Span Text="&#10;"/>
                            <Span Text="&#9;&#9;&#9;&#9;&#9;"/>
                            <Span Text="This policy page is designed to clearly explain how we keep your privacy safe and secure. " />
                            <Span Text="We are committed to protecting your privacy and ensuring that any information you provide is handled " />
                            <Span Text="responsibly, securely, and transparently. "/>
                            <Span Text="&#10;"/>
                            <Span Text="&#10;"/>
                            <Span Text="&#9;&#9;&#9;&#9;&#9;"/>
                            <Span Text="This Privacy Policy outlines what information Mapidemic collects, how it is used, "/>
                            <Span Text="and the measures we take to safeguard it. By using Mapidemic, you agree to the practices described in this policy." />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>

            <!-- Reason -->
            <Border Grid.Row="2"
                    Padding="14"
                    BackgroundColor="#0066CC"
                    HorizontalOptions="FillAndExpand">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ClickedOnReason" />
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                <Label Grid.Column="1" 
                    Text="2. Reason" 
                    FontAttributes="Bold" 
                    FontSize="18" 
                    TextColor="White"
                    VerticalTextAlignment="Center" />
                </Grid>
            </Border>

            <!-- Content for Reason -->
            <Grid Grid.Row="3" x:Name="ReasonContent" IsVisible="False"
                  Padding="14" BackgroundColor="Transparent">
                <Label LineBreakMode="WordWrap">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="&#9;&#9;&#9;&#9;&#9;"/>
                            <Span Text="Mapidemic ensures the privacy of all its users. We strictly focus on keeping your identity safe and secure." />
                            <Span Text="&#10;"/>
                            <Span Text="&#10;"/>
                            <Span Text="&#9;&#9;&#9;&#9;&#9;"/>
                            <Span Text="We do not collect, use, or store any personally identifiable information, such as your name, email address, phone number, or any other direct identifiers." />
                            <Span Text="&#10;"/>
                            <Span Text="&#10;"/>
                            <Span Text="This allows us to:" />
                            <Span Text="&#10;"/>
                            <Span Text="&#10;"/>

                            <!-- Bullet list -->
                            <Span Text="• Provide accurate maps and outbreak trends" />
                            <Span Text="&#10;"/>
                            <Span Text="• Improve community health awareness" />
                            <Span Text="&#10;"/>
                            <Span Text="• Ensure reliable and anonymous data reporting" />
                            <Span Text="&#10;"/>
                            <Span Text="• Maintain overall app performance and security" />
                            <Span Text="&#10;"/>
                            <Span Text="&#10;"/>
                            <Span Text="&#9;&#9;&#9;&#9;&#9;"/>
                            <Span Text="At no point is your identity linked to any report you submit." />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
