<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mapidemic"
             xmlns:pages="clr-namespace:Mapidemic.Pages.Menu"
             xmlns:models="clr-namespace:Mapidemic.Models"
             x:Class="Mapidemic.HomePage">

    <FlyoutPage.ToolbarItems>
        <ToolbarItem x:Name="SettingsIcon" Clicked="SettingsButton_Clicked" IconImageSource="settings_icon.png"/>
    </FlyoutPage.ToolbarItems>

    <FlyoutPage.Flyout>

        <pages:MenuPage Title="Menu" x:Name="menuPage"/>

    </FlyoutPage.Flyout>
    
    <FlyoutPage.Detail>
        <NavigationPage x:Name="ViewPort" BarBackgroundColor="#0074C0" BarTextColor="White" Title="Mapidemic">
            <x:Arguments>
                <local:TrackingPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>