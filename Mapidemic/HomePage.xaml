<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mapidemic"
             x:Class="Mapidemic.HomePage">

    <FlyoutPage.ToolbarItems>
        <ToolbarItem IconImageSource="settings_icon.png"/>
    </FlyoutPage.ToolbarItems>

    <FlyoutPage.Flyout>

        <local:MenuPage Title="Menu" />

    </FlyoutPage.Flyout>
    
    <FlyoutPage.Detail>
        <NavigationPage x:Name="ViewPort" BarBackgroundColor="#0074C0" BarTextColor="White">
            <x:Arguments>
                <local:TrackingPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>