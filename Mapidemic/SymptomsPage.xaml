<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:local="clr-namespace:Mapidemic"
                xmlns:models="clr-namespace:Mapidemic.Models"
                x:Class="Mapidemic.SymptomsPage">
    
    <VerticalStackLayout>

        <CollectionView x:Name="SymptomsCV"
                        SelectionMode="None"
                        ItemsSource="{Binding SymptomList}">

            <CollectionView.ItemTemplate>

                <DataTemplate x:DataType="models:Symptom">

                    <Grid RowDefinitions="Auto"
                          ColumnDefinitions="Auto, Auto">

                        <CheckBox Grid.Column="0" />

                        <Label Grid.Column="1"
                               Text="{Binding Name}"
                               HorizontalOptions="Center"/>

                    </Grid>

                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>

        <Button Padding="10"
                Text="Enter symptoms"
                HorizontalOptions="FillAndExpand" />

    </VerticalStackLayout>

</ContentPage>