<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			xmlns:sfavatar="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
			xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            x:Class="Mapidemic.Pages.Menu.MeetTheTeamPage"
            Title="Meet the Team"
			android:TabbedPage.ToolbarPlacement="Bottom"
			android:TabbedPage.IsSwipePagingEnabled="False">

	<!-- Alex -->
	<ContentPage Title="Alex Griep">
		<ScrollView>
			<VerticalStackLayout Padding="10">
				<Label FontSize="18">
				<Label.FormattedText>
					<FormattedString>
					<Span Text="Alex Griep &#10;" FontAttributes="Bold" />
					<Span Text="Major " />
					</FormattedString>
				</Label.FormattedText>
				</Label>

				<Label FontSize="18" LineBreakMode="WordWrap">
				<Label.FormattedText>
					<FormattedString>
					<Span Text="Place text here" />
					</FormattedString>
				</Label.FormattedText>
				</Label>
			</VerticalStackLayout>
		</ScrollView>
	</ContentPage>

	<!-- Arthur -->
	<ContentPage Title="Arthur Waldman">
		<ScrollView>
			<VerticalStackLayout Padding="10">
				<Label FontSize="18">
				<Label.FormattedText>
					<FormattedString>
					<Span Text="Arthur Waldman &#10;" FontAttributes="Bold" />
					<Span Text="Major" />
					</FormattedString>
				</Label.FormattedText>
				</Label>

				<Label FontSize="18" LineBreakMode="WordWrap">
				<Label.FormattedText>
					<FormattedString>
					<Span Text="Place text here" />
					</FormattedString>
				</Label.FormattedText>
				</Label>
			</VerticalStackLayout>
		</ScrollView>
	</ContentPage>

	<!-- Connor -->
	<ContentPage Title="Connor McGuire">
		<ScrollView>
			<VerticalStackLayout Padding="10">
				<Label FontSize="18">
				<Label.FormattedText>
					<FormattedString>
					<Span Text="Connor McGuire &#10;" FontAttributes="Bold" />
					<Span Text="Major" />
					</FormattedString>
				</Label.FormattedText>
				</Label>

				<Label FontSize="18" LineBreakMode="WordWrap">
				<Label.FormattedText>
					<FormattedString>
					<Span Text="Place text here" />
					</FormattedString>
				</Label.FormattedText>
				</Label>
			</VerticalStackLayout>
		</ScrollView>
	</ContentPage>

	<!-- Neng -->
	<ContentPage Title="Neng Yang">
		<ScrollView>
			<!-- Root grid: top section + bottom section -->
			<Grid RowDefinitions="Auto,*">

				<!-- Row 0: Avatar + Name + Major -->
				<Grid Grid.Row="0"
					RowDefinitions="Auto,Auto,Auto,Auto"
					RowSpacing="8"
					Padding="0,20,0,0">

					<!-- Avatar + Name + Major -->
					<sfavatar:SfAvatarView
						Grid.Row="0"
						ContentType="Custom"
						ImageSource="mapidemic_logo.png"
						VerticalOptions="Center"
						HorizontalOptions="Center"
						HeightRequest="100"
						WidthRequest="100"
						CornerRadius="50"
						Stroke="Black"
						StrokeThickness="2"
						Background="Transparent"
						AvatarColorMode="Default" />
					<Label Grid.Row="1"
						Margin="0,8,0,0"
						FontSize="24"
						HorizontalTextAlignment="Center"
						Padding="0,10,0,0">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="Neng Yang" FontAttributes="Bold" />
								<Span Text="&#10;" />
								<Span Text="Major: Computer Science" FontSize="16"/>
								<Span Text="&#10;&#10;" />
								<Span Text="Feel free to contact me!" FontSize="16"/>
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<!-- Email and Social Media Buttons -->
					<HorizontalStackLayout Spacing="20"
						HorizontalOptions="Center"
						Grid.Row="3">
						<ImageButton Source="email_icon.png"
									WidthRequest="40" 
									HeightRequest="40"
									BorderWidth="1"
									BorderColor="Black"
									CornerRadius="2"
									Clicked="NengEmailClicked" />
						<ImageButton Source="linkedin_icon.png"
									WidthRequest="40" 
									HeightRequest="40"
									BorderWidth="1"
									BorderColor="Black"
									CornerRadius="2"
									Clicked="NengLinkedInClicked" />
						<ImageButton Source="handshake_icon.png"
									WidthRequest="40" 
									HeightRequest="40"
									BorderWidth="1"
									BorderColor="Black"
									CornerRadius="2"/>
					</HorizontalStackLayout>
				</Grid>

				<!-- About Neng -->
				<Grid Grid.Row="1"
					Margin="0,10,0,0"
					Padding="16">
					<ScrollView>
						<Label FontSize="16"
							LineBreakMode="WordWrap">
							<Label.FormattedText>
								<FormattedString>
									<Span Text="About Me:&#10;&#10;" FontAttributes="Bold" FontSize="18"/>
									<Span Text="I’m a junior at the University of Wisconsin–Oshkosh pursuing a degree in Computer Science. " />
									<Span Text="This project has been a great opportunity to apply my skills and contribute to a meaningful learning curve. " />
									<Span Text="My academic journey has allowed me to work with a variety of technologies—from algorithms and " />
									<Span Text="Java to .NET MAUI mobile development—and I enjoy continuously learning new tools and improving my skills." />
								</FormattedString>
							</Label.FormattedText>
						</Label>
					</ScrollView>
				</Grid>
			</Grid>
		</ScrollView>
	</ContentPage>
</TabbedPage>
