<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:local="clr-namespace:Mapidemic"
             x:Class="Mapidemic.MenuPage">

    <Grid VerticalOptions="FillAndExpand"
          BackgroundColor="#0074C0"
          RowDefinitions="2*, 1*, Auto, 1*, Auto, 1*, Auto, 1*, Auto, 1*, Auto, 1*">

        <popup:SfPopup Message=""
                       x:Name="Popup"
                       IsOpen="False"
                       HeaderTitle=""
                       StaysOpen="True"
                       HeaderHeight="0"
                       WidthRequest="125"
                       HeightRequest="125"
                       ShowCloseButton="False"
                       VerticalOptions="Center"
                       HorizontalOptions="Center">
                
                <popup:SfPopup.ContentTemplate>
                        <DataTemplate>
                                <ActivityIndicator IsRunning="True"
                                                   Color="#0074C0"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Center"
                                                   Scale="2"/>
                        </DataTemplate>
                </popup:SfPopup.ContentTemplate>

        </popup:SfPopup>

        <Label Text="Menu"
               Grid.Row="0"
               FontSize="50"
               TextColor="White"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               BackgroundColor="#0074C0" />

               

        <Button Grid.Row="1"
                FontSize="20"
                CornerRadius="0"
                TextColor="White"
                Text="Symptom Checker"
                Clicked="ScButton_Clicked"
                BackgroundColor="#0074C0"/>

        <BoxView Grid.Row="2" HeightRequest="1" BackgroundColor="#696969"></BoxView>

         <Button Grid.Row="3"
                FontSize="20"
                CornerRadius="0"
                TextColor="White"
                Text="Meet the Team"
                Clicked="AuButton_Clicked"
                BackgroundColor="#0074C0"/>

        <BoxView Grid.Row="4" HeightRequest="1" BackgroundColor="#696969"></BoxView>

        <Button Grid.Row="5"
                FontSize="20"
                CornerRadius="0"
                TextColor="White"
                Text="Privacy Policy"
                Clicked="PpButton_Clicked"
                BackgroundColor="#0074C0"/>

        <BoxView Grid.Row="6" HeightRequest="1" BackgroundColor="#696969"></BoxView>

        <Button Grid.Row="7"
                FontSize="20"
                CornerRadius="0"
                TextColor="White"
                Text="Feedback"
                Clicked="FbButton_Clicked"
                BackgroundColor="#0074C0"/>

        <BoxView Grid.Row="8" HeightRequest="1" BackgroundColor="#696969"></BoxView>

        <Button Grid.Row="11"
                FontSize="20"
                CornerRadius="0"
                TextColor="White"
                LineBreakMode="WordWrap"
                Clicked="CdcButton_Clicked"
                BackgroundColor="#0074C0"
                Text="Centers for Disease Control and Prevention"/>

        <BoxView Grid.Row="8" HeightRequest="1" BackgroundColor="#696969"></BoxView>

        <Button Grid.Row="9"
                FontSize="20"
                CornerRadius="0"
                TextColor="White"
                LineBreakMode="WordWrap"
                Clicked="IwcButton_Clicked"
                BackgroundColor="#0074C0"
                Text="Information We Collect"/>

    </Grid>

</ContentPage>